<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_margin="10dp"

        android:background="@drawable/circular_shape"
        android:id="@+id/profileItem"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/followIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/followIcon"
                android:src="@drawable/baseline_person_add_alt_1_24"/>



            <LinearLayout
                android:layout_gravity="center"
                android:background="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/profilepic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/profilePicDescription"
                    android:src="@drawable/baseline_photo_size_select_actual_24"/>



                <TextView
                    android:id="@+id/profilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="@string/sermonItemName"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/profilebadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="@string/sermonItemBadge"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"/>


                 </LinearLayout>

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginStart="30dp"
                android:contentDescription="@string/followIcon"
                android:src="@drawable/baseline_location_on_24"/>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/sercontent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/rate_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_star_outline_24"
                    android:contentDescription="Rate Icon"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="6dp"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="Rate%"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/sermons_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_spatial_audio_off_24"
                    android:contentDescription="@string/commentIcon"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="Sermons"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/posts_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_comment_24"
                    android:contentDescription="@string/commentIcon"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/posts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="Posts"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"/>

            </LinearLayout>

    </LinearLayout>
